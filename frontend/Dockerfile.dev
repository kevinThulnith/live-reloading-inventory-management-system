# Development Dockerfile for frontend
FROM node:22-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --prefer-offline --no-audit --no-fund --silent

# Copy source code
COPY . .

EXPOSE 5173

# Use Vite dev server for hot reloading
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
